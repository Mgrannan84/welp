<p id="notice"><%= notice %></p>

<div class="jumbotron p-5 mb-4 text-white bg-warning rounded-3">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">Ello is the best way to find great local businesses</h1>
        <p class="col-md-8 fs-4">Search for everything from the tastiest burger to the most renowned cardiologist.</p>
          <button class="btn btn-danger" type="button">Create Your Free Account</button>
      </div>
    </div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= restaurant.phone %></td>
        <td><%= link_to restaurant.website, restaurant.website %></td>
        <td><%= link_to 'Show', restaurant, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Restaurant', new_restaurant_path, class: "btn btn-link" %>
